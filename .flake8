[flake8]
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    ENV,
    build,
    dist,
    *.egg-info,
    .eggs,
    site-packages,
    AIGCodeSet,
    aicodechecker-main
max-line-length = 127
max-complexity = 10
ignore = 
    E203,  # whitespace before ':'
    E266,  # too many leading '#' for block comment
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    F401,  # imported but unused (sometimes needed for __init__.py)
    F841,  # local variable assigned but never used (sometimes needed for type hints)

